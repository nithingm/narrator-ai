# Ignore node_modules (Frontend & Backend)
node_modules/
frontend/node_modules/
backend/node_modules/

# Ignore Next.js build files
.next/
out/

# Ignore environment variables (API keys, secrets)
.env
.env.local
.env.development
.env.production

#Build Artifacts
build/
dist/

#Allow the template .env file to be committed
!backend/.env.example
!frontend/.env.example
!.env.example


# Ignore system files
.DS_Store
*.log
*.lock
backend/*.log
frontend/*.log

# Ignore package manager lock files (if not needed)
pnpm-lock.yaml
yarn.lock

# Ignore large Next.js binary dependencies that caused push errors
frontend/node_modules/@next/swc-win32-x64-msvc/
backend/node_modules/@next/swc-win32-x64-msvc/

# Ignore VSCode workspace settings (optional)
.vscode/

# Ignore temporary files & crash reports
npm-debug.log*
yarn-debug.log*
yarn-error.log*
